# ============================================
# AutoCognitix Environment Configuration
# ============================================
# SECURITY WARNING: Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# Generate secure passwords/secrets with: openssl rand -hex 32
#
# For local development, see: .env.local.example

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=autocognitix
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=autocognitix
DATABASE_URL=postgresql+asyncpg://autocognitix:your_secure_password_here@localhost:5432/autocognitix

# ============================================
# Neo4j Configuration
# ============================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_URI=bolt://localhost:7687
# For Neo4j Aura (production):
# NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io

# ============================================
# Qdrant Configuration
# ============================================
# Local Qdrant (docker-compose)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Qdrant Cloud (production) - get from https://cloud.qdrant.io
QDRANT_URL=https://your-cluster-id.region.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Application Configuration
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
DEBUG=true
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=AutoCognitix
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: JWT_SECRET_KEY must be at least 32 characters!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# External API Keys
# ============================================
# NHTSA API (free, no key required)
NHTSA_API_BASE_URL=https://vpic.nhtsa.dot.gov/api

# YouTube Data API v3 (optional, for video indexing)
YOUTUBE_API_KEY=your_youtube_api_key_here

# CarMD API (optional, paid service)
CARMD_API_KEY=your_carmd_api_key_here
CARMD_PARTNER_TOKEN=your_carmd_partner_token_here

# CarAPI (optional, freemium)
CARAPI_API_KEY=your_carapi_key_here

# ============================================
# LLM Configuration
# ============================================
# Choose one: openai, anthropic, or local
LLM_PROVIDER=anthropic

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================
# Translation API Keys (for Hungarian DTC translation)
# ============================================
# Get free API keys at these URLs:
# - GROQ: https://console.groq.com (fast, free tier)
# - DeepSeek: https://platform.deepseek.com (5M free tokens)
# - OpenRouter: https://openrouter.ai (free tier with many models)
# - Mistral: https://console.mistral.ai (1B free tokens/month)
GROQ_API_KEY=your_groq_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# MISTRAL_API_KEY=your_mistral_api_key_here

# ============================================
# Email Service (Resend)
# ============================================
# Get API key from: https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# ============================================
# Back4App Configuration (Vehicle Database)
# ============================================
# Get credentials from: https://www.back4app.com/database/back4app/car-make-model-dataset
BACK4APP_APP_ID=your_back4app_app_id_here
BACK4APP_API_KEY=your_back4app_api_key_here

# ============================================
# Hungarian NLP Configuration
# ============================================
# huBERT model for Hungarian embeddings
HUBERT_MODEL=SZTAKI-HLT/hubert-base-cc
EMBEDDING_DIMENSION=768

# HuSpaCy model
HUSPACY_MODEL=hu_core_news_lg

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (optional, for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Production Only
# ============================================
# SSL/TLS
# SSL_KEYFILE=/path/to/key.pem
# SSL_CERTFILE=/path/to/cert.pem

# Domain
# DOMAIN=autocognitix.example.com

# Email (for password reset, notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASSWORD=your_smtp_password
# EMAILS_FROM_EMAIL=noreply@autocognitix.example.com
