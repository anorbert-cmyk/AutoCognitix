# ============================================
# AutoCognitix - Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in the values
# NEVER commit the actual .env.production file!

# ==========================================
# Domain Configuration
# ==========================================
DOMAIN=autocognitix.example.com
ACME_EMAIL=admin@example.com

# ==========================================
# Image Configuration
# ==========================================
IMAGE_TAG=latest
DATA_PATH=./data

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_USER=autocognitix
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=autocognitix

# ==========================================
# Neo4j Configuration
# ==========================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ==========================================
# Application Secrets
# ==========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# ==========================================
# LLM Provider Configuration
# ==========================================
# Choose one: anthropic or openai
LLM_PROVIDER=anthropic

# Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=sk-ant-XXXXX

# OpenAI API Key (if using GPT)
OPENAI_API_KEY=sk-XXXXX

# ==========================================
# Worker Configuration
# ==========================================
# Number of Gunicorn workers (recommended: 2 * CPU cores + 1)
WORKERS=4

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://autocognitix.example.com

# ==========================================
# External Services (if using cloud providers)
# ==========================================
# Neo4j Aura (if not using local Neo4j)
# NEO4J_URI=neo4j+s://xxx.databases.neo4j.io

# Qdrant Cloud (if not using local Qdrant)
# QDRANT_URL=https://xxx.cloud.qdrant.io:6333
# QDRANT_API_KEY=

# Redis Cloud (if not using local Redis)
# REDIS_URL=redis://user:password@host:port
